<div class="container">
  <table class="table table-hover">

    <tr>
      <th>Фамилия</th>
      <th>Имя</th>
      <th>Отчество</th>
      <th>Должность</th>
      <th class="text-center">Идентификационный код<br></th>
      <th colspan="3" class="text-center">Действия</th>
    </tr>

    <% @employees.each do |employee| %>

        <tr>
          <td><%= employee.surname.mb_chars.capitalize %></td>
          <td><%= employee.name.mb_chars.capitalize %></td>
          <td><%= employee.patronymic.mb_chars.capitalize %></td>
          <td><%= employee.position.mb_chars.capitalize %></td>
          <td class="text-center"><%= employee.code %></td>
          <td class="text-center"><%= link_to 'Просмотреть', employee, class: 'btn btn-default btn-xs btn-block' %></td>
          <td class="text-center"><%= link_to 'Редактировать', edit_employee_path(employee), class: 'btn btn-warning btn-xs btn-block' %></td>
          <td class="text-center"><%= link_to 'Удалить', employee, class: 'btn btn-danger btn-xs btn-block', method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        </tr>
    <% end %>

  </table>
</div>