<%= form_for(@employee) do |f| %>
<div class="container">
    <%= render 'layouts/errors', object: @employee %>
</div>
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <div class="panel panel-default">
        <div class="panel-body">
          <% if @employee.present? %>
            <h3 class="thin text-center"><%= @employee.surname %> <%= @employee.name %> <%= @employee.patronymic %></h3>
            <p class="text-center text-muted"><%= @employee.code %></p>
          <% else %>
              <h3 class="thin text-center">Создание нового работника</h3>
              <p class="text-center text-muted">Информация</p>
          <% end %>
          <hr>
            <div class="field">
              <%= f.text_field :date_of_acception, class: 'datepicker form-control', readonly: true, placeholder: 'Дата принятия на работу' %>
            </div> <br>
            <div class="field">
              <%= f.number_field :table_number, placeholder:'Табельный номер', class: 'form-control' %>
            </div> <br>
            <div class="field">
              <%= f.text_field :surname, placeholder: 'Фамилия', class: 'form-control' %>
            </div> <br>
            <div class="field">
              <%= f.text_field :name, placeholder: 'Имя', class: 'form-control' %>
            </div> <br>
            <div class="field">
              <%= f.text_field :patronymic, placeholder: 'Отчество', class: 'form-control' %>
            </div> <br>
            <div class="field">
              <%= f.text_field :position, placeholder: 'Должность', class: 'form-control' %>
            </div> <br>
            <div class="field">
              <%= f.number_field :code, placeholder: 'Идентификационный код', class: 'form-control' %>
            </div> <br>
            <div class="field">
              <%= f.text_field :address, placeholder: 'Адресс', class: 'form-control' %>
            </div> <br>
            <div class="field">
              <%= f.text_field :birthday, class: 'datepicker form-control', readonly: true, placeholder: 'Дата рождения' %>
            </div> <br>
            <div class="field">
              <%= f.phone_field :phone, placeholder: 'Телефон', class: 'form-control' %>
            </div> <br>
            <div class="field">
              <%= f.text_field :email, placeholder: 'Email', required: false, class: 'form-control' %>
            </div>
          <br>
          <div class="field">
            <%= f.text_area :note, placeholder: 'Заметка', class: 'form-control' %>
          </div>
          <br>
            <div class="thin text-center">
              <%= f.button(type: 'submit', class: 'btn btn-success') do %>
                <span class="glyphicon glyphicon-ok" aria-hidden="true"> Подтвердить</span>
              <% end %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
