<div class="row">
  <p></p>
  <%= form_for (@employee) do |f| %>
      <div class="col-md-6 text-center">
        <%= f.label :fired, 'Уволен:' %>
        <%= f.check_box :fired, required: true %>
      </div>
      <div class="col-md-6 text-center form-inline">
        <%= f.text_field :fired_date, class: 'datepicker form-control', placeholder: 'Дата увольнения', size: '30', readonly: true %>
      </div>
      <div class="text-center">
        <%= f.button(type: 'submit', class: 'btn btn-success btn-xs', data: {confirm: 'Вы уверены? Дальнейшее восстановление невозможно!'}) do %>
          <span class="glyphicon glyphicon-ok"> Подтвердить</span>
        <% end  %><br>
        <p> </p>
      </div>
  <% end %>
</div>