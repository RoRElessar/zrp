<div class='container'>
  <h3 class="text-center">Новый табель</h3>
  <div  class="well well-sm text-center">
    <h4><%= @employee.surname %> <%= @employee.name %> <%= @employee.patronymic %></h4>
    <h5><%= @employee.position %></h5>
    <p><strong><%= Time.now.strftime("%B %Y") %></strong></p>
  </div>

  <%= render 'form' %>

  <%= link_to employee_path(@employee), class: 'btn btn-sm btn-default' do %>
    <span class="glyphicon glyphicon-arrow-left"> Назад</span>
  <% end %>
</div>