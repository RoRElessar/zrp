<div class="container">
  <h3 class="well well-sm text-center"><%= @employee.surname %> <%= @employee.name %> <%= @employee.patronymic %></h3>
  <p class="text-center"><strong><%= @table.date_of_table.strftime("%B %Y") %></strong></p>

  <% unless @employee.fired? %>
    <%= link_to 'Редактировать табель', edit_employee_table_path, class: 'btn btn-xs btn-block btn-primary' %>
  <% else %>
    <%= link_to 'Редактировать табель', '#', class: 'btn btn-xs btn-block btn-primary disabled' %>
  <% end %>
  <table class="table table-hover table-bordered">
    <tr>
      <th>Отработано дней</th>
      <th>Дни на больничном</th>
      <th>Дни отпуска</th>
      <th>Дни за свой счет</th>
    </tr>
    <tr>
      <td><%= @table.days_worked %></td>
      <td><%= @table.days_of_sickness %></td>
      <td><%= @table.vacation_days %></td>
      <td><%= @table.unpaid_vacation_days %></td>
    </tr>

  </table>

  <%= link_to employee_path(@employee), class: 'btn btn-sm btn-default' do %>
    <span class="glyphicon glyphicon-arrow-left"> Назад</span>
  <% end %>
</div>
